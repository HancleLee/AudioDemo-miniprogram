/**index.wxss**/
.color_gray {
    color: #888A8A;
}

.opacity_clear {
  opacity: 0;
}

.backcolor_clear {
  background-color: rgba(0, 0, 0, 0);
}

.userinfo {
  display: flex;
}

.userinfo-avatar {
  width: 128px;
  height: 128px;
  margin: 20px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
  background-color: '#FF0000';
  color: '#FF0000'
}

.scrollview-home {
  background-color: 'red';
}

.choice_box {
    padding: 0 0px;
}

.choice_box .choice_list .choice_item{
    margin-bottom: 15px;
}

.choice_box .choice_list {
    width: 100%;
    height: 300px;
}

.choice_box .choice_list {
    font-size: 12px;
    font-weight: bold;
    color: #333;
}

.choice_cover {
  width: 100%;
  height: 220px;  
}

.choice_item_sign {
  padding: 5px 10px;
  font-size: 12px;
  margin-bottom: 10px;
}

.choice_item_space {
  height: 20px;
  background-color: #eee;
}

.choice_item_title_tip {
  font-size: 14px;
  color: white;
  margin-left: 30px;
  margin-top: 10px;
}

.choice_item_title {
  font-size: 25px;
  color: white;
  /* background-color: red; */
  margin-top: 10px;
  margin-left: 30px;
  margin-right: 30px;
  font-weight: bold;
}

.choice_item_user {
  /* background-color: red; */
  margin-top: -10px;
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
}

.choice_item_user_avatar {
    width: 30px;
    height: 30px;
    margin-left: 20px;
    padding: 1px;
    background-color: white;
}

.choice_item_user_nickname {
  font-size: 13px;
  color: black;
  margin-top: 15px;
  margin-left: 10px;
}

.choice_item_user_line {
    width: 1px;
    height: 15px;
    margin-top: 18px;
    background-color: rgba(1, 1, 1, 0.2);
    margin-left: 5px;
    margin-right: 5px;
}

.choice_item_user_tag {
  font-size: 12px;
  color: #9B9B9B;
  margin-top: 15px;
  width: 150px;
}

.choice_item_user_view_back {
  margin-left: 10px;
  margin-right: 0px;
  height: 45px; 
  display: flex; 
  flex-direction: row-reverse;
  flex: 1;
}

.choice_item_user_viewicon {
  margin-right: 3px; 
  width: 16px;
   height: 45px;  
}

.choice_item_user_viewnum {
  width: 30px;
  font-size: 10px;
  line-height: 45px;
}